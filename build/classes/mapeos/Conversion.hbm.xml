<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.Conversion" table="conversion">
		
		<id column="idConversion" name="idConversion"><generator class="identity"/></id>
		
		<property column="presentacionCompra" name="presentacionCompra" type="string"/>
		<property column="presentacionVenta" name="presentacionVenta" type="string"/>
		<property column="cantidad" name="cantidad" type="int"/>
		
		<set name = "presentaciones" table = "presentacion" order-by = "idPresentacion asc" inverse = "true" lazy = "true" fetch = "select">
			<key column = "idConversion" not-null = "true"/>
			<one-to-many class = "datos.Presentacion"/>
		</set>		
		
	</class>
</hibernate-mapping>
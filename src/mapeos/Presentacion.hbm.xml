<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Presentacion" table="presentacion">
		
		<id column="idPresentacion" name="idPresentacion"><generator class="identity"/></id>
		
		<property column="descripcion" name="descripcion" type="string"/>
		
		<many-to-one name = "conversion" class = "datos.Conversion" column = "idConversion" not-null = "true"/>
		
		<set name = "ingredientes" table = "ingrediente" order-by = "idIngrediente asc" inverse = "true" lazy = "true" fetch = "select">
			<key column = "idPresentacion" not-null = "true"/>
			<one-to-many class = "datos.Ingrediente"/>
		</set>
	
	</class>
</hibernate-mapping>
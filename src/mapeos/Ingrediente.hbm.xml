<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.ItemIngrediente" table="itemIngrediente">
		
		<id column="idItemIngrediente" name="idItemIngrediente"><generator class="identity"/></id>
		
		<property column="nombre" name="nombre" type="string"/>
		
		<many-to-one name = "presentacion" class = "datos.Presentacion" column = "idPresentacion" not-null = "true"/>

		<set name = "itemsStock" table = "itemStock" order-by = "idItemStock asc" inverse = "true" lazy = "true" fetch = "select">
			<key column = "idIngrediente" not-null = "true"/>
			<one-to-many class = "datos.ItemStock"/>
		</set>

		<set name = "itemsComposicion" table = "itemComposicion" order-by = "idItemComposicion asc" inverse = "true" lazy = "true" fetch = "select">
			<key column = "idIngrediente" not-null = "true"/>
			<one-to-many class = "datos.ItemComposicion"/>
		</set>

	</class>
</hibernate-mapping>